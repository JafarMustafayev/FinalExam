

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int counter = 0;
}
@using Bilet_3.Models;
@model List<Position>
<div class="mx-3">
    <div style="display:flex; align-items:center; justify-content:space-between">
        <div>
            <h2>Manage<strong>Position</strong></h2>
        </div>
        <div>
            <a asp-action="Create" asp-controller="position">
                <button class=" btn btn-info">
                    <i class="bi bi-pencil-square"></i>
                    Create a Position
                </button>
            </a>
        </div>
    </div>
    <div class="mx-3">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Position item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td >@item.Id</td>
                        <td >@item.Name</td>
                        <td >
                            <div >
                                <a asp-action="Update" asp-route-id="@item.Id">
                                    <button class=" btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> 
                                    </button>
                                </a>
                            
                                <a class=" mx-1" asp-action="delete" asp-route-id="@item.Id">
                                    <button class=" btn btn-danger">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </a>
                            </div>
                        </td>
                        
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>

